{
    "openapi": "3.0.1",
    "info": {
        "title": "WiFiHotspot",
        "description": "Describes WiFi access points in Pune city",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://{serverIP}:{serverPort}/api/1.0.0/resource",
            "description": "Resource server",
            "variables": {
                "serverIP": {
                    "default": "localhost"
                },
                "serverPort": {
                    "default": "8080"
                }
            }
        }
    ],
    "paths": {
        "/latest/wifi-hotspot/{NAME}": {
            "get": {
                "description": "Get the sensor message as an array between given time points",
                "operationId": "latest",
                "responses": {
                    "200": {
                        "description": "Sensor Message as JSON",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SensorPacket"
                                }
                            }
                        }
                    }
                }
            },
            "parameters": [
                {
                    "name": "NAME",
                    "in": "path",
                    "description": "Name of the location where sensor is deployed",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "id",
                    "in": "header",
                    "description": "User id",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "apikey",
                    "in": "header",
                    "description": "API Key",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    },
    "components": {
        "schemas": {
            "SensorPacket": {
                "description": "Wrapper object for the sensor message",
                "required": [
                    "WiFiHotspot"
                ],
                "type": "object",
                "properties": {
                    "WiFiHotspot": {
                        "$ref": "#/components/schemas/WiFiHotspot"
                    }
                }
            },
            "WiFiHotspot": {
                "title": "Root Type for SensorPacket",
                "description": "JSON sensor message",
                "type": "object",
                "properties": {
                    "DOWNLOAD_RATE": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/DOWNLOAD_RATE"
                    },
                    "LASTUPDATEDATETIME": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/LASTUPDATEDATETIME",
                        "format": "date-time"
                    },
                    "HOTSPOT_ID": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/HOTSPOT_ID"
                    },
                    "ACCESS_POINT_COUNT": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/ACCESS_POINT_COUNT"
                    },
                    "LOCATION_STATUS": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/LOCATION_STATUS"
                    },
                    "UPLOAD_RATE": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/UPLOAD_RATE"
                    },
                    "NAME": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/NAME"
                    },
                    "USER_COUNT": {
                        "$ref": "https://raw.githubusercontent.com/rbccps-iisc/iudx-schemas/master/data_models/WiFi/hotspot/examples/exdataModel_wifi_hotspot_Pune_0.json#/dataModelSchema/properties/USER_COUNT"
                    }
                },
                "example": "{\n    \"DOWNLOAD_RATE\": \"0.0\",\n    \"ACCESS_POINTS\": null,\n    \"LASTUPDATEDATETIME\": \"2019-02-21T12:12:21.046+05:30\",\n    \"HOTSPOT_ID\": \"2\",\n    \"ACCESS_POINT_COUNT\": \"5\",\n    \"LOCATION_STATUS\": \"ON\",\n    \"UPLOAD_RATE\": \"0.0\",\n    \"NAME\": \"Chhatrapati Sambhaji Raje\",\n    \"LOCATION_TYPE\": null,\n    \"USER_COUNT\": \"11\"\n}"
            }
        }
    }
}
